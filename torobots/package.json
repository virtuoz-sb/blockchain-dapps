{
  "name": "torobot-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "server/*"
  ],
  "scripts": {
    "web": "yarn workspace @torobot/web",
    "api": "yarn workspace @torobot/api",
    "engine": "yarn workspace @torobot/engine",
    "engine:serve": "cd apps/engine/dist && yarn start",
    "shared": "yarn workspace @torobot/shared",
    "webserver": "yarn workspace @torobot/webserver",
    "server-config": "yarn workspace @torobot/server-config",
    "configure": "yarn server-config start",
    "prepare:install": "yarn --production=false",
    "prepare:build": "yarn shared build && yarn engine build && yarn api build && yarn web build && yarn webserver build",
    "deploy": "pm2 deploy ecosystem.yml production --force",
    "deploy-setup": "pm2 deploy ecosystem.yml production setup --force"
  },
  "dependencies": {
    "@types/coinbase": "^2.0.8",
    "@torobot/shared": "*",    
    "@types/uuid": "^8.3.3",
    "@types/qs": "^6.9.7",
    "@types/validator": "^13.6.6",
    "@types/moment": "^2.13.0",
    "@types/moment-duration-format": "^2.2.3",
    "@types/bignumber.js": "^5.0.0",
    "@types/jest": "^26.0.23",
    "@types/shelljs": "^0.8.8",
    "@types/lodash": "^4.14.172",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "lerna": "^4.0.0",
    "luhn-js": "1.1.2",
    "mongodb": "4.0.1",
    "mongoose": "5.13.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "dayjs": "^1.10.7",
    "moment-duration-format": "^2.2.3",    
    "qs": "^6.10.1",
    "query-string": "^7.0.1",
    "uuid": "^8.3.2",
    "web3": "^1.4.0",
    "abi-decoder": "^2.4.0",
    "validator": "^13.7.0",
    "winston": "^3.3.3",
    "app-root-path": "^3.0.0",
    "concurrently": "^6.2.0",
    "pm2": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@types/node": "^16.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.0.5",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.5"

  }
}
